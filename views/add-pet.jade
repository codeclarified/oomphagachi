doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='/css/bootstrap.min.css', rel='stylesheet', media='screen')
    script(src='http://code.jquery.com/jquery.js')
    script(src='js/bootstrap.min.js')
  body
  .container
    h1 Add Pet
    p.lead Add a new pet to your collection
    br
    form(role='form', action="/add-pet",method="post", style='max-width: 300px;')
      .form-group
          input.form-control(type='text', name="name", placeholder='Pet\'s name')
      .form-group
        input.form-control(type='hidden', name="owner", value='#{user.username}')
      button.btn.btn-default(type='submit') Submit
      &nbsp;
      a(href='/')
        button.btn.btn-primary(type="button") Cancel
      br
      h4= info
